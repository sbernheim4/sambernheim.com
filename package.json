{
  "name": "sambernheim.com",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "dev": "remix watch",
    "postinstall": "remix setup cloudflare-workers",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "deploy": "rm -rf build dist && npm run build && wrangler publish",
    "sass": "sass --watch app/:app/"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.0.5",
    "@remix-run/react": "^1.0.3",
    "@remix-run/serve": "^1.0.3",
    "highlight.js": "^11.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remarkable": "^2.0.1",
    "remix": "^1.0.3",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.0.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/remarkable": "^2.0.3",
    "esbuild": "0.13.14",
    "miniflare": "2.0.0-next.3",
    "sass": "^1.43.4",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
