{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "module": "es2020",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "noImplicitAny": true,
    "AstrictNullChecks": true,
    "AstrictFunctionTypes": true,
    "AstrictBindCallApply": true,
    "AstrictPropertyInitialization": true,
    "AnoImplicitThis": true,
    "AalwaysStrict": true,
    "noEmit": true
  }
}
